@using ExerciseXDataLibrary.Models;
@model IEnumerable<ExercisesModel>
@{
    ViewData["Title"] = "List of Exercises";
}

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Index Exercise</h1>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="Exercises" asp-action="Create" class="btn btn-primary">Create New Exercise</a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th> Exercise Id</th>
                <th> Exercise Category</th> 
                <th> Exercise Image </th>
                <th> Exercise Name </th>
                <th> Pros 1 </th>
                <th> Pros 2 </th>
                <th> Pros 3 </th>
                <th> Cons 1 </th>
                <th> Cons 2 </th>
                <th> Cons 3 </th>
                <th> Modified Date</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td> @obj.E_Id</td>
                    <td> @obj.C_Id </td> 
                    <td> @obj.E_Image</td>
                    <td> @obj.E_Name </td>
                    <td> @obj.E_Pros_1 </td>
                    <td> @obj.E_Pros_2 </td>
                    <td> @obj.E_Pros_3 </td>
                    <td> @obj.E_Cons_1 </td>
                    <td> @obj.E_Cons_2 </td>
                    <td> @obj.E_Cons_3</td>
                    <td> @obj.E_Modified_Date</td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Exercises" asp-action="Details" asp-route-id="@obj.E_Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Details</a>

                            <a asp-controller="Exercises" asp-action="Edit" asp-route-id="@obj.E_Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>

                            <a asp-controller="Exercises" asp-action="Delete" asp-route-id="@obj.E_Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>