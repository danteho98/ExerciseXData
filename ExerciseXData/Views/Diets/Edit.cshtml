 @model ExerciseXData_DietLibrary.DataTransferObject.EditDietDto

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<form method="post">
    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h1 class="text-primary">Edit Category</h1>
            <hr />
        </div>

        @Html.HiddenFor(model => model.D_Id)
        <div asp-validation-summary="All"></div> @*Displays all the validation texts*@
        <div class="mb-3">
            <label asp-for="D_Name"></label>
            <input asp-for="D_Name" class="form-control" />
            <span asp-validation-for="D_Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="D_Description"></label>
            <input asp-for="D_Description" class="form-control" />
            <span asp-validation-for="D_Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="D_Pros_1"></label>
            <input asp-for="D_Pros_1" class="form-control" />
            <span asp-validation-for="D_Pros_1" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="D_Pros_2"></label>
            <input asp-for="D_Pros_2" class="form-control" />
            <span asp-validation-for="D_Pros_2" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="D_Pros_3"></label>
            <input asp-for="D_Pros_3" class="form-control" />
            <span asp-validation-for="D_Pros_3" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="D_Cons_1"></label>
            <input asp-for="D_Cons_1" class="form-control" />
            <span asp-validation-for="D_Cons_1" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="D_Cons_2"></label>
            <input asp-for="D_Cons_2" class="form-control" />
            <span asp-validation-for="D_Cons_2" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="D_Cons_3"></label>
            <input asp-for="D_Cons_3" class="form-control" />
            <span asp-validation-for="D_Cons_3" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Diets" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts {
    @*this part is responsible for the client side*@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}