@model Categories

<form asp-action="Edit">
    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h1 class="text-primary">Edit Category</h1>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class = "text-danger"></div> @*Displays all the validation texts*@

        <div class=" form-group text-center">
@*            <div class="mb-3">
                <label asp-for="C_Id"></label>
                <input asp-for="C_Id" class="form-control" />
                <span asp-validation-for="C_Id" class="text-danger"></span>
            </div>*@

        <div class="mb-3">
            <label asp-for="C_Image"></label>
                <input asp-for="C_Image" class="form-control" />
                <span asp-validation-for="C_Image" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="C_Name"></label>
            <input asp-for="C_Name" class="form-control" />
            <span asp-validation-for="C_Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
