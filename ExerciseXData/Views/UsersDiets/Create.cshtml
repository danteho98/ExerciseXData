@model UsersDietsModel

<form method="post">
    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h1 class="text-primary">Create Food</h1>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> @*Displays all the validation texts*@

        <div class="mb-3">
            <label asp-for="UD_Id"></label>
            <input asp-for="UD_Id" class="form-control" />
            <span asp-validation-for="UD_Id" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="U_Id"></label>
            <input asp-for="U_Id" class="form-control" />
            <span asp-validation-for="U_Id" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="D_Id"></label>
            <input asp-for="D_Id" class="form-control" />
            <span asp-validation-for="D_Id" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Custom_Diet_Name"></label>
            <input asp-for="Custom_Diet_Name" class="form-control" />
            <span asp-validation-for="Custom_Diet_Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UD_Serving_Size"></label>
            <input asp-for="UD_Serving_Size" class="form-control" />
            <span asp-validation-for="UD_Serving_Size" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UD_Frequency"></label>
            <input asp-for="UD_Frequency" class="form-control" />
            <span asp-validation-for="UD_Frequency" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UD_Total_Calaroies"></label>
            <input asp-for="UD_Total_Calaroies" class="form-control" />
            <span asp-validation-for="UD_Total_Calaroies" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UD_Modified_Date"></label>
            <input asp-for="UD_Modified_Date" class="form-control" />
            <span asp-validation-for="UD_Modified_Date" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="UsersDiets" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts {
    @*this part is responsible for the client side*@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}