@model List<ExerciseXData_DietLibrary.Models.UsersDietsModel>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Users Diets Plan</h1>

<!-- Display TempData message if it's set -->
@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        @TempData["success"]
    </div>
}

<a asp-action="Create" class="btn btn-primary">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Diet ID</th>
            <th>Custom Diet Name</th>
   
            <th>Serving Size</th>
            <th>Frequency</th>
            <th>Total Calaroies</th>
            <th>Modified Date</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Completed </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usersDiets in Model)
        {
            <tr>
                <td>@usersDiets.U_Id</td>
                <td>@usersDiets.D_Id</td>
                <td>@usersDiets.Custom_Diet_Name</td>
                <td>@usersDiets.UD_Serving_Size</td>
                <td>@usersDiets.UD_Frequency</td>
                <td>@usersDiets.UD_Total_Calaroies</td>
                <td>@usersDiets.UD_Modified_Date</td>
                <td>@usersDiets.UD_Start_Date</td>
                <td>@usersDiets.UD_End_Date</td>
                <td>@usersDiets.UD_Completed</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Categories" asp-action="Edit" asp-route-id="@usersDiets.U_Id"
                           class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>

                        <a asp-controller="Categories" asp-action="Delete" asp-route-id="@usersDiets.U_Id"
                           class="btn btn-primary mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


