@model ExerciseXData_SharedLibrary.Dto.UsersDietsIndexDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Delete User Diet";
}

<h1>Delete User Diet</h1>

<div>
    <h4>Are you sure you want to delete this entry?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">User Name</dt>
            <dd class="col-sm-10">@Model.UserName</dd>

            <dt class="col-sm-2">Diet Name</dt>
            <dd class="col-sm-10">@Model.DietName</dd>

            <dt class="col-sm-2">Custom Diet Name</dt>
            <dd class="col-sm-10">@Model.CustomDietName</dd>

            <dt class="col-sm-2">Custom Diet Name</dt>
            <dd class="col-sm-10">@Model.CustomDietName</dd>

            <dt class="col-sm-2">Custom Diet Name</dt>
            <dd class="col-sm-10">@Model.UD_ServingSize</dd>

            <dt class="col-sm-2">Custom Diet Name</dt>
            <dd class="col-sm-10">@Model.UD_Frequency</dd>

            <dt class="col-sm-2">Custom Diet Name</dt>
            <dd class="col-sm-10">@Model.UD_TotalCalories</dd>

            <dt class="col-sm-2">Start Date</dt>
            <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

            <dt class="col-sm-2">End Date</dt>
            <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

            <dt class="col-sm-2">Completed</dt>
            <dd class="col-sm-10">@Model.IsCompleted</dd>
            
        </dl>
    </div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="UD_Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
