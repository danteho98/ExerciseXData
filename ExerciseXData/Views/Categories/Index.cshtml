@* @using ExerciseXDataLibrary.Models;
@model IEnumerable<CategoriesModel> *@
@{
    ViewData["Title"] = "List of Categories";
}

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Index Categories</h1>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">Create New Categories</a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
               <th>Categories ID</th>
               <th>Categories Image</th>
               <th>Categories Name </th>
               <th>Modified Date</th>
                
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.C_Id</td>
                    <td>@obj.C_Image</td>
                    <td>@obj.C_Name </td>
                    <td>@obj.C_Modified_Date</td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Categories" asp-action="Details" asp-route-id="@obj.C_Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Details</a>

                            <a asp-controller="Categories" asp-action="Edit" asp-route-id="@obj.C_Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>

                            <a asp-controller="Categories" asp-action="Delete" asp-route-id="@obj.C_Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>