@model ExerciseXDataLibrary.DataTransferObject.LoginDto
@{
    Layout = "_Layout";
}

<div class="login-container">
    <form asp-controller="Account" asp-action="Login" method="post" id="loginForm">
        <h2>Login</h2>
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" type="text" required>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" required>
        </div>
        <button type="submit">Login</button>
        <p class="error-message" id="errorMessage"></p>
    </form>
</div>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="popup-message">
        <p>@ViewData["ErrorMessage"]</p>
        <button onclick="closePopup()">OK</button>
    </div>
}

@section Scripts {
    <script>
        function closePopup() {
            document.querySelector(".popup-message").style.display = "none";
        }

        window.addEventListener("load", function () {
            // Show popup if there is an error message
            if (document.querySelector(".popup-message p").innerText !== "") {
                document.querySelector(".popup-message").style.display = "block";
            }
        });
    </script>
}
