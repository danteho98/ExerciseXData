@model ExerciseXData_ExerciseLibrary.DataTransferObject.ExerciseIndexDto
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Exercises</h1>

<!-- Display TempData message if it's set -->
@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        @TempData["success"]
    </div>
}

<a asp-action="Create" asp-route-categoryId="@ViewData["CategoryId"]" class="btn btn-primary">Create New Exercise</a>

@if (Model.Exercises != null && Model.Exercises.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>Exercise ID</th>
            <th>Category ID</th>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Pros 1</th>
            <th>Pros 2</th>
            <th>Pros 3</th>
            <th>Cons 1 </th>
            <th>Cons 2 </th>
            <th>Cons 3 </th>
            <th>Modified Date</th>
        </tr>
    </thead>
  @*   @if (Model != null && Model.Any())*@
    <tbody>

        @foreach (var exercises in Model.Exercises)
        {
            <tr>
                <td>@exercises.E_Id</td>
                <td>@exercises.CategoriesC_Id</td>
                <td>
                    @if (exercises.E_Image != null && exercises.E_Image.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(exercises.E_Image)" alt="Image" style="max-height: 50px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@exercises.E_Name</td>
                <td>@exercises.E_Description</td>

                <td>@exercises.E_Pros_1</td>
                <td>@exercises.E_Pros_2</td>
                <td>@exercises.E_Pros_3</td>

                <td>@exercises.E_Cons_1</td>
                <td>@exercises.E_Cons_2</td>
                <td>@exercises.E_Cons_3</td>
                <td>@exercises.E_Modified_Date</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Exercises" asp-action="Edit" asp-route-id="@exercises.E_Id"
                           class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>

                        <a asp-controller="Exercises" asp-action="Delete" asp-route-id="@exercises.E_Id"
                           class="btn btn-primary mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

    </table>
}
else
{
    <tr><td colspan="12">No exercises found</td></tr>
}