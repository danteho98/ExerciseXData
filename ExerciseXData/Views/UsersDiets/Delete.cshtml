@model ExerciseXData_DietLibrary.DataTransferObject.UsersDietsIndexDto

@{
    ViewData["Title"] = "Delete User Diet";
}

<h1>Delete User Diet</h1>

<div>
    <h4>Are you sure you want to delete this entry?</h4>
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
        <dt class="col-sm-2">Diet</dt>
        <dd class="col-sm-10">@Model.DietName</dd>
        <dt class="col-sm-2">Custom Diet Name</dt>
        <dd class="col-sm-10">@Model.CustomDietName</dd>
        <dt class="col-sm-2">Serving Size</dt>
        <dd class="col-sm-10">@Model.UD_ServingSize</dd>
        <dt class="col-sm-2">Frequency</dt>
        <dd class="col-sm-10">@Model.UD_Frequency</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="UD_Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
