@* @using ExerciseXDataLibrary.Models;
@model FoodsModel *@

@* Check if the user is in the Admin role *@
@if (User.IsInRole("Admin"))
{

    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h1 class="text-primary"> Foods Details</h1>
            <h1>Details for @Model.F_Id</h1>
            <hr />
        </div>
        
        <div class = "form-group text-center"></div>

        <div class="mb-3">
            <label asp-for="F_Id"></label>
            <input asp-for="F_Id" class="form-control" readonly />
            <span asp-validation-for="F_Id" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="F_Image"></label>
            <input asp-for="F_Image" class="form-control" readonly />
            <span asp-validation-for="F_Image" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="F_Name"></label>
            <input asp-for="F_Name" class="form-control" readonly />
            <span asp-validation-for="F_Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="F_Calories"></label>
            <input asp-for="F_Calories" class="form-control" readonly />
            <span asp-validation-for="F_Calories" class="text-danger"></span>
        </div>
        
        <div class="mb-3">    
            <label asp-for="F_Modified_Date"></label>
            <input asp-for="F_Modified_Date" class="form-control" readonly />
            <span asp-validation-for="F_Modified_Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.F_Id" ></a>
            <a class="btn btn-secondary" asp-action="Index" style="width:150px">Back to List</a>
        </div>
</div>
}


else
{
    <div class="alert alert-danger mt-4">
        <h4 class="alert-heading">Access Denied</h4>
        <p>You do not have permission to access this page. Please contact an administrator if you believe this is an error.</p>
    </div>
}

@section Scripts{
    @*this part is responsible for the client side*@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}