@model Categories
@using ExerciseXData.Data;

<form method="post">
    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h1 class="text-primary">Create Category</h1>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> @*Displays all the validation texts*@

        <div class="mb-3">
            <label asp-for="C_Id"></label>
            <input asp-for="C_Id" class="form-control" />
            <span asp-validation-for="C_Id" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="C_Image"></label>
            <input asp-for="C_Image" class="form-control" />
            <span asp-validation-for="C_Image" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="C_Name"></label>
            <input asp-for="C_Name" class="form-control" />
            <span asp-validation-for="C_Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="C_Modified_Date"></label>
            <input asp-for="C_Modified_Date" class="form-control" />
            <span asp-validation-for="C_Modified_Date" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @*this part is responsible for the client side*@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}