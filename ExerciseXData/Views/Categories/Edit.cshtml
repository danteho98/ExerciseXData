@using ExerciseXDataLibrary.Models;
@model CategoriesModel

@* Check if the user is in the Admin role *@
@if (User.IsInRole("Admin"))
{
    <form asp-action="Edit">
        <div class=" border p-3 mt-4">
            <div class=" row pb-2">
                <h1 class="text-primary">Edit Category</h1>
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly" class = "text-danger"></div> @*Displays all the validation texts*@

            <div class=" form-group text-center">
                <div class="mb-3">
                    <label asp-for="C_Id"></label>
                    <input asp-for="C_Id" class="form-control" />
                    <span asp-validation-for="C_Id" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="C_Image"></label>
                    <input asp-for="C_Image" class="form-control" />
                    <span asp-validation-for="C_Image" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="C_Name"></label>
                    <input asp-for="C_Name" class="form-control" />
                    <span asp-validation-for="C_Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="C_Modified_Date"></label>
                    <input asp-for="C_Modified_Date" class="form-control" />
                    <span asp-validation-for="C_Modified_Date" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
            </div>
        </div>
    </form>
}

else
{
    <div class="alert alert-danger mt-4">
        <h4 class="alert-heading">Access Denied</h4>
        <p>You do not have permission to access this page. Please contact an administrator if you believe this is an error.</p>
    </div>
}

@section Scripts{
    @*this part is responsible for the client side*@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}