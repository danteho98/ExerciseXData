@using ExerciseXData_UserLibrary.DataTransferObject
@model UserDashboardDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome, @Model.Username</h1>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Gender:</strong> @Model.Gender</p>
<p><strong>Role:</strong> @Model.Role</p>
<p><strong>Age:</strong> @Model.Age</p>
<p><strong>Height:</strong> @Model.Height_CM cm</p>
<p><strong>Weight:</strong> @Model.Weight_KG kg</p>
<p><strong>Fitness Goal:</strong> @Model.FitnessGoal</p>
<p><strong>Activity Level:</strong> @Model.ActivityLevel</p>
<p><strong>Dietary Preferences:</strong> @Model.DietaryPreferences</p>

<h3>Health Conditions</h3>
@if (Model.HealthConditions != null && Model.HealthConditions.Any())
{
    <ul>
        @foreach (var condition in Model.HealthConditions)
        {
            <li>@condition</li>
        }
    </ul>
}
else
{
    <p>No health conditions listed.</p>
}

<p><strong>Sleep Patterns:</strong> @Model.SleepPatterns</p>
<p><strong>Account Created:</strong> @Model.CreatedDate.ToString("f")</p>
<p><strong>Last Login:</strong> @Model.LastLogin.ToString("f")</p>
<p><strong>Consent to Data Collection:</strong> @(Model.ConsentToDataCollection ? "Yes" : "No")</p>

<h3>Exercise Plans</h3>
@if (Model.ExercisePlans != null && Model.ExercisePlans.Any())
{
    <ul>
        @foreach (var plan in Model.ExercisePlans)
        {
            <li>@plan</li>
        }
    </ul>
}
else
{
    <p>No exercise plans assigned.</p>
}

<h3>Diet Plans</h3>
@if (Model.DietPlans != null && Model.DietPlans.Any())
{
    <ul>
        @foreach (var plan in Model.DietPlans)
        {
            <li>@plan</li>
        }
    </ul>
}
else
{
    <p>No diet plans assigned.</p>
}
