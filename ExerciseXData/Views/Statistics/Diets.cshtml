@{
    Layout = "_Layout";
}

<h2>Pie Chart Example</h2>

<canvas id="myPieChart" width="400" height="400"></canvas>

<script>
    var ctx = document.getElementById('myPieChart').getContext('2d');
    var chartData = @Html.Raw(Json.Serialize(ViewBag.ChartData));
    var myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Red', 'Blue', 'Yellow', 'Green'], // Add labels to your pie chart
            datasets: [{
                label: 'My Dataset',
                data: chartData, // Use the data passed from the controller
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true
        }
    });
</script>
