@model FoodsModel

<form method="post" asp-action="DeletePOST">
    @*DeletePOST here can change name with the CategoryController POST method*@
    <input asp-for="F_Id" hidden />
    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h1 class="text-primary">Delete Food</h1>
            <hr />
        </div>
        <div asp-validation-summary="All"></div> @*Displays all the validation texts*@

        <div class="mb-3">
            <label asp-for="F_Id"></label>
            <input asp-for="F_Id" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="F_Image"></label>
            <input asp-for="F_Image" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="F_Name"></label>
            <input asp-for="F_Name" disabled class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="F_Calories"></label>
            <input asp-for="F_Calories" disabled class="form-control" />

        </div>

        <div class="mb-3">
        <label asp-for="F_Modified_Date"></label>
        <input asp-for="F_Modified_Date" disabled class="form-control" />

        </div>

       
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Foods" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @*this part is responsible for the client side*@
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}